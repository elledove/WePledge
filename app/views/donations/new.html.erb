<h1> Let's Start A New Donation! </h1>

<h2>Look at you! Being all proactive and stuff! Way to go.....</h2>

<br>
<%= render partial: '/errors', locals: {record: @donation} %>

<br>
<%= form_for @donation do |f|%>
<%= f.label :date %>
<%= f.date_field :date %>

<%= f.label :amount %>
<%= f.number_field :amount %>

<%= f.label :description %>
<%= f.text_field :description %>

<% if params[:organization_id]%>
<%= f.hidden_field(:organization_id, value: params[:organization_id])%>
<%else %>
<%= f.collection_select :organization_id, Organization.all, :id, :name %>

<% end %>
<%= f.submit "Submit Donation" %>

<% end %>






